<!-- LAYOUT PRINCIPAL -->

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestaoChamadosWeb</title>

    <!--BootStrap Icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestaoChamadosWeb.styles.css" asp-append-version="true" />    
</head>
<body>
    
    <!-- CABEÇALHO -->
    <header>
        <div class="d-flex align-items-center position-relative py-4 px-3">
            <!-- Ícone Perfil -->
            <div class="infoUser d-flex align-items-center">
                <a asp-page="/Account/Profile" class="icon-header d-flex gap-2 align-items-center">
                    <i class="bi bi-person-circle"></i>
                    <p class="nameUser fs-5 m-0">Gabriel Almeida</p>
                </a>
            </div>

            <!-- Ícone Casa central -->
            <div class="home position-absolute top-50 start-50 translate-middle">
                <a asp-page="/Index" class="icon-header">
                    <i class="bi bi-house"></i>
                </a>
            </div>

            <!-- Ícone Sino -->
            <div class="bell ms-auto">
                <a href="" class="icon-header">
                    <i class="bi bi-bell"></i>
                </a>
            </div>
        </div>
    </header>

    <!--MENU PRINCIPAL-->
    <!--ASP.NET Core renderiza o conteúdo (NÃO APAGAR)-->
    @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@

    <main role="main" class="pb-3 container">
        @RenderBody()
    </main>


    <!-- RODAPÉ -->
    <footer>
        <p class="text-center">Dúvidas? Confira a nossa seção de <a asp-page="/FAQ">Perguntas Frequentes (FAQ)</a> para respostas rápidas!</p>
    </footer>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>